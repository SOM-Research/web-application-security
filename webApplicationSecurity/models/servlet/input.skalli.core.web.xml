<web-app 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    id="WebApp_ID" version="2.5">

    <servlet>
        <description></description>
        <display-name>SkalliAPI</display-name>
        <servlet-name>SkalliAPI</servlet-name>
        <servlet-class>org.eclipse.skalli.core.rest.RestletServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SkalliAPI</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>org.restlet.application</param-name>
        <param-value>org.eclipse.skalli.core.rest.RestApplication</param-value>
    </context-param>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Authenticated Write Access</web-resource-name>
            <url-pattern>/projects</url-pattern>
            <url-pattern>/projects/*</url-pattern>
            <url-pattern>/user/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>Everyone</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Read Access</web-resource-name>
            <url-pattern>/projects</url-pattern>
            <url-pattern>/projects/*</url-pattern>
            <url-pattern>/user/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Access Only</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/config/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>Everyone</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Skalli REST API</realm-name>
    </login-config>

    <security-role>
        <description>Administrators</description>
        <role-name>admin</role-name>
    </security-role>

    <security-role>
        <description>Everyone</description>
        <role-name>Everyone</role-name>
    </security-role>

</web-app>
